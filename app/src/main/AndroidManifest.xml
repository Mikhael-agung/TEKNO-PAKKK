<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.project_uts">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.TeknoServe"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- LOGIN ACTIVITY - Entry Point -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.TeknoServe">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- CUSTOMER MAIN ACTIVITY -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.TeknoServe" />

        <activity
            android:name=".fragment.ComplaintDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.TeknoServe" />

        <!-- TEKNISI MAIN ACTIVITY -->
        <activity
            android:name=".Teknisi.Activity.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.TeknoServe" />

        <!-- REGISTER ACTIVITY (if exists) -->
        <activity
            android:name=".RegisterCustomerActivity"
            android:exported="false" />

        <activity
            android:name=".Teknisi.Activity.KomplainDetailActivity"
            android:exported="false" />

    </application>

</manifest>