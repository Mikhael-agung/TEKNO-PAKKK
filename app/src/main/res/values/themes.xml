<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.TeknoServe" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorSecondaryVariant">@color/accent_color</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Surface colors -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Background colors -->
        <item name="backgroundColor">@color/white</item>
        <item name="cardBackgroundColor">@color/gray_light</item>

        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray_dark</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnBackground">@color/black</item>

        <!-- Custom attributes -->
        <item name="themeBackground">@color/white</item>
        <item name="themeCardBackground">@color/gray_light</item>
        <item name="themeTextPrimary">@color/black</item>
        <item name="themeTextSecondary">@color/gray_dark</item>
        <item name="themeStatusBar">@color/primary_dark</item>
        <item name="themeNavigationBar">@color/white</item>
        <item name="cardOutlineColor">@color/colorPrimary</item>
    </style>

    <!-- Theme for settings/preference screens -->
    <style name="Theme.TeknoServe.Settings" parent="Theme.TeknoServe">
        <item name="android:windowBackground">@color/gray_light</item>
    </style>

</resources>