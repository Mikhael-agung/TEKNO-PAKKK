<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_complaint"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="4dp"
    android:background="@drawable/bg_card_shadow"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/linear_layout_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:background="@drawable/bg_card_outline_default">

        <!-- Bagian Kiri: Tanggal -->
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="12 Des"
            android:textColor="#95A5A6"
            android:textSize="10sp"
            android:gravity="center"
            />

        <!-- Bagian Tengah: Informasi Komplain -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <!-- ID Komplain -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COMP-001"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="2dp" />

            <!-- Deskripsi Singkat -->
            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Printer tidak bisa print, perlu..."
                android:textSize="11sp"
                android:textColor="#7F8C8D"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="2dp" />

        </LinearLayout>

        <!-- Bagian Kanan: Status Badge -->
            <TextView
                android:id="@+id/tv_status_badge"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/badge_danger"
                android:gravity="center"
                android:paddingHorizontal="6dp"
                android:paddingVertical="4dp"
                android:text="PENDING"
                android:textColor="#FFFFFF"
                android:textSize="9sp"
                android:textStyle="bold" />

        </LinearLayout>

</androidx.cardview.widget.CardView>