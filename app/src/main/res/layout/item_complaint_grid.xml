<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_complaint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="?attr/themeCardBackground"
    app:strokeColor="?attr/cardOutlineColor"
    app:strokeWidth="1dp">

    <LinearLayout
        android:id="@+id/linear_layout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:foreground="?android:attr/selectableItemBackground">

        <!-- TOP ROW: Status + ID -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Status Badge -->
            <TextView
                android:id="@+id/tv_status_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:text="DIPROSES"
                android:textAllCaps="true"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/badge_proses" />

            <!-- Flexible Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Complaint ID -->
            <TextView
                android:id="@+id/tv_complaint_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: fc5a..."
                android:textSize="10sp"
                android:textStyle="italic"
                android:textColor="?attr/themeTextSecondary" />

        </LinearLayout>

        <!-- TITLE -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shower Air Tidak Deras"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/themeTextPrimary"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="4dp" />

        <!-- DESCRIPTION -->
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shower mandi airnya kecil tidak deras seperti biasa."
            android:textSize="13sp"
            android:textColor="?attr/themeTextSecondary"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="12dp" />

        <!-- BOTTOM ROW: Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Calendar Emoji -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="ðŸ“…"
                android:textSize="12sp"
                android:textColor="?attr/themeTextSecondary" />

            <!-- Date Text -->
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 Jan 2026"
                android:textSize="12sp"
                android:textColor="?attr/themeTextSecondary" />

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>