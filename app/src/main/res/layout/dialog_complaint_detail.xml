<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header: Back Button + Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Title -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ðŸ“‹ Detail Komplain"
                android:textColor="#007BFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- Status Badge -->
            <TextView
                android:id="@+id/tv_detail_status_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PENDING"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/badge_warning"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp" />

        </LinearLayout>

        <!-- ID Komplain -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID Komplain"
            android:textColor="#666"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_detail_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="comp_8b800173fada432ba7ee"
            android:textColor="#333"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Card untuk detail -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Judul -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Judul"
                    android:textColor="#666"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tv_detail_judul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="BAJUU LEPAS"
                    android:textColor="#333"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Kategori & Tanggal -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kategori"
                            android:textColor="#666"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_detail_kategori"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Internet &amp; Jaringan"
                            android:textColor="#333"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tanggal"
                            android:textColor="#666"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_detail_tanggal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="15 Des 2024"
                            android:textColor="#333"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Deskripsi -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deskripsi"
                    android:textColor="#666"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tv_detail_deskripsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="walaweee"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp" />

                <!-- Foto jika ada -->
                <TextView
                    android:id="@+id/tv_foto_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Foto"
                    android:textColor="#666"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_detail_foto"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:background="@drawable/btn_border"
                    android:visibility="gone" />

                <!-- Teknisi jika ada -->
                <LinearLayout
                    android:id="@+id/layout_detail_teknisi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘¨â€ðŸ”§ Teknisi:"
                        android:textColor="#666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_detail_teknisi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Budi Santoso"
                        android:textColor="#007BFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_detail_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="ðŸ“¤ SHARE"
                android:textColor="#4CAF50"
                app:icon="@android:drawable/ic_menu_share"
                app:iconTint="#4CAF50"
                app:strokeColor="#4CAF50"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_detail_close"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âŒ TUTUP"
                android:textColor="#F44336"
                app:icon="@android:drawable/ic_menu_close_clear_cancel"
                app:iconTint="#F44336"
                app:strokeColor="#F44336"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>