<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/themeBackground">

    <!-- ================= TOP BAR ================= -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/themeBackground"
        android:paddingHorizontal="16dp">

        <!-- TOMBOL BACK TERPISAH -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="?attr/themeTextPrimary"
            android:padding="12dp"/>

        <!-- JUDUL DI TENGAH -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Complaint"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/themeTextPrimary"
            android:layout_centerInParent="true"/>

        <!-- STATUS CHIP DI KANAN -->
        <TextView
            android:id="@+id/chip_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ON PROGRESS"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/badge_proses"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progress_bar_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:visibility="gone"/>

    <!-- ================= CONTENT ================= -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ================= TECHNICIAN CARD ================= -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/technician_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:strokeColor="?attr/cardOutlineColor"
                app:cardBackgroundColor="?attr/themeCardBackground"
                app:strokeWidth="2sp"
                android:layout_marginBottom="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <LinearLayout
                        android:id="@+id/technician_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/btn_call"
                        android:layout_toEndOf="@+id/img_technician">

                        <TextView
                            android:id="@+id/tv_technician_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Waiting for technician"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?attr/themeTextPrimary"
                            android:layout_marginStart="12dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="12dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_calendar"
                                app:tint="@color/primary_color"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="4dp"/>

                            <TextView
                                android:id="@+id/tv_technician_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No technician assigned yet"
                                android:textSize="14sp"
                                android:textColor="@color/primary_color"/>

                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_technician"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_profile"
                        android:background="@drawable/circle_bg"
                        android:padding="4dp"/>

                    <ImageButton
                        android:id="@+id/btn_call"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_whatsapp"
                        android:background="@drawable/bg_circle_primary"
                        android:padding="12dp"
                        app:tint="@color/white"
                        android:visibility="gone"/>

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ================= PROGRESS STATUS CARD ================= -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/themeCardBackground"
                app:strokeColor="?attr/cardOutlineColor"
                app:strokeWidth="2sp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Progress Status"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/themeTextPrimary"
                        android:layout_marginBottom="16dp"/>

                    <!-- LOADING PROGRESS BAR -->
                    <ProgressBar
                        android:id="@+id/progress_bar_timeline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginVertical="32dp"
                        android:visibility="gone"/>

                    <!-- NO TIMELINE MESSAGE -->
                    <TextView
                        android:id="@+id/tv_no_timeline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Memuat riwayat status..."
                        android:textAlignment="center"
                        android:paddingVertical="32dp"
                        android:visibility="gone"
                        android:textColor="?attr/themeTextSecondary"/>

                    <!-- TIMELINE RecyclerView -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_timeline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ================= COMPLAINT DETAILS CARD ================= -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="?attr/cardOutlineColor"
                app:cardBackgroundColor="?attr/themeCardBackground"
                app:strokeWidth="2sp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/title_complaint_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Complaint Details"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?attr/themeTextPrimary"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CATEGORY"
                            android:textSize="11sp"
                            android:textColor="@color/discord_text_secondary"
                            android:layout_alignParentEnd="true"
                            android:layout_above="@+id/tv_category"/>

                        <TextView
                            android:id="@+id/tv_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Category"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="?attr/themeTextPrimary"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID:"
                        android:textSize="12sp"
                        android:textColor="@color/discord_text_secondary"/>

                    <TextView
                        android:id="@+id/tv_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TK-0000"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_color"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date Reported"
                        android:textSize="12sp"
                        android:textColor="@color/discord_text_secondary"/>

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textSize="15sp"
                        android:textColor="?attr/themeTextPrimary"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Issue Description"
                        android:textSize="12sp"
                        android:textColor="@color/discord_text_secondary"/>

                    <TextView
                        android:id="@+id/tv_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textSize="15sp"
                        android:textColor="?attr/themeTextPrimary"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Service Address"
                                android:textSize="12sp"
                                android:textColor="@color/discord_text_secondary"/>

                            <TextView
                                android:id="@+id/tv_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Address"
                                android:textSize="15sp"
                                android:textColor="?attr/themeTextPrimary"
                                android:layout_marginTop="2dp"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- ================= BOTTOM BUTTONS ================= -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="?attr/themeBackground"
        android:elevation="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_share"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="55dp"
            android:text="Share"
            android:textSize="15dp"
            android:textColor="@color/primary_color"
            android:textStyle="bold"
            app:strokeColor="@color/primary_color"
            app:strokeWidth="2dp"
            app:cornerRadius="12dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_marginEnd="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_contact_technician"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="56dp"
            android:textSize="14dp"
            android:text="Hubungi Teknisi"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:backgroundTint="@color/primary_color"
            app:cornerRadius="12dp"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

</LinearLayout>