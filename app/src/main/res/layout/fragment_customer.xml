<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp"
    android:layout_marginTop="5dp"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Kembali"
            app:icon="@android:drawable/ic_menu_revert"
            app:iconTint="#007BFF"
            android:textColor="#007BFF"
            style="@style/Widget.Material3.Button.TextButton"
            android:backgroundTint="@android:color/transparent" />

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Complaint"
            android:textAlignment="center"
            android:textColor="#007BFF"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_back"/>

        <!-- Judul Komplain -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Judul Komplain"
            android:textColor="#333"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/et_judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_border"
            android:padding="12dp"
            android:hint="Masukkan judul komplain" />

        <!-- Deskripsi -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deskripsi Masalah"
            android:textColor="#333"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/et_deskripsi"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_border"
            android:gravity="top"
            android:hint="Jelaskan masalah secara detail"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:padding="12dp" />

        <!-- Kategori -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kategori"
            android:textColor="#333"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/sp_kategori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_border"
            android:padding="12dp" />

        <!-- Foto - Pakai MaterialButton -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_pilih_foto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Pilih Foto Barang Rusak"
            android:textColor="@color/black"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:strokeColor="#007BFF"
            app:strokeWidth="1dp"
            app:icon="@android:drawable/ic_menu_camera"
            app:iconTint="@color/white" />

        <ImageView
            android:id="@+id/iv_foto"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            android:scaleType="centerCrop" />

        <!-- Submit Button - Pakai MaterialButton -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kirim Komplain"
            android:textColor="#fff"
            app:icon="@android:drawable/ic_menu_send"
            app:iconTint="@color/white"
            android:textAllCaps="false"
            style="@style/Widget.Material3.Button"
            android:backgroundTint="#007BFF" />

    </LinearLayout>

</ScrollView>