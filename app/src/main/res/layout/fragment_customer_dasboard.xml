<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#213448"
    android:orientation="vertical">

    <!-- ScrollView untuk bagian ATAS saja -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingTop="15dp">

            <!-- === HEADER PROFILE === -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <!-- Profile Image Circle -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="16dp"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="6dp">

                        <ImageView
                            android:id="@+id/iv_profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_profile"
                            android:scaleType="centerCrop"
                            android:contentDescription="Profile" />

                    </androidx.cardview.widget.CardView>

                    <!-- User Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_welcome"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Selamat Datang!"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#2C3E50" />

                        <TextView
                            android:id="@+id/tv_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="user@email.com"
                            android:textSize="14sp"
                            android:textColor="#7F8C8D" />

                        <!-- Quick Status Badge -->
                        <TextView
                            android:id="@+id/tv_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Customer"
                            android:textSize="12sp"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:background="@drawable/bg_role_badge"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- === TOMBOL BUAT KOMPLAIN === -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_buat_komplain"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="24dp"
                android:text="Buat Komplain Baru"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:letterSpacing="0.02"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_complaint"
                app:iconTint="@color/white"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                style="@style/Widget.MaterialComponents.Button" />

            <!-- === STATISTICS SECTION === -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Statistik Komplain"
                android:textColor="#FCF8F8"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:drawablePadding="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Pending Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_pending"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â³"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/tv_pending_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="0"
                            android:textColor="#E74C3C"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Pending"
                            android:textColor="#7F8C8D"
                            android:textSize="12sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- In Progress Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_progress"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="âš¡"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/tv_progress_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="0"
                            android:textColor="#F39C12"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Proses"
                            android:textColor="#7F8C8D"
                            android:textSize="12sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Completed Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_completed"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="âœ…"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/tv_completed_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="0"
                            android:textColor="#27AE60"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Selesai"
                            android:textColor="#7F8C8D"
                            android:textSize="12sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- === FILTER & KOMPLAIN LIST (BISA SCROLL SENDIRI) === -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Filter Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Filter Komplain"
                android:textColor="#2C3E50"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="12dp" />

            <!-- Filter Buttons - Horizontal Scroll -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="1dp"
                android:paddingBottom="12dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/filter_all"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginEnd="8dp"
                        android:minWidth="60dp"
                        android:backgroundTint="@android:color/white"
                        android:letterSpacing="0.02"
                        android:text="ALL"
                        android:textColor="#3498DB"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        app:cornerRadius="16dp"
                        app:strokeColor="#3498DB"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/filter_pending"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginEnd="8dp"
                        android:minWidth="80dp"
                        android:backgroundTint="@android:color/white"
                        android:letterSpacing="0.02"
                        android:text="PENDING"
                        android:textColor="#E74C3C"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        app:cornerRadius="16dp"
                        app:strokeColor="#E74C3C"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/filter_proses"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginEnd="8dp"
                        android:minWidth="80dp"
                        android:backgroundTint="@android:color/white"
                        android:letterSpacing="0.02"
                        android:text="PROSES"
                        android:textColor="#F39C12"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        app:cornerRadius="16dp"
                        app:strokeColor="#F39C12"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/filter_ditolak"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginEnd="8dp"
                        android:minWidth="80dp"
                        android:backgroundTint="@android:color/white"
                        android:letterSpacing="0.02"
                        android:text="DITOLAK"
                        android:textColor="#C0392B"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        app:cornerRadius="16dp"
                        app:strokeColor="#C0392B"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/filter_selesai"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:minWidth="80dp"
                        android:backgroundTint="@android:color/white"
                        android:letterSpacing="0.02"
                        android:text="SELESAI"
                        android:textColor="#27AE60"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        app:cornerRadius="16dp"
                        app:strokeColor="#27AE60"
                        app:strokeWidth="1dp" />

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Horizontal Line Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginBottom="12dp" />

            <!-- RECYCLERVIEW BISA SCROLL SENDIRI -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_complaint_grid"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingHorizontal="16dp"
                android:paddingBottom="16dp" />

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/empty_grid"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“­"
                    android:textSize="48sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Belum ada komplain"
                    android:textColor="#7F8C8D"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mulai dengan membuat komplain baru"
                    android:textColor="#BDC3C7"
                    android:textSize="14sp"
                    android:textAlignment="center" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>