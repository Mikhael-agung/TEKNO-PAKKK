<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- HEADER dengan Tombol Back -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Tombol Back -->
            <Button
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="â†"
                android:textSize="18sp"
                android:background="@drawable/btn_background"
                android:textColor="#007BFF"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Detail Komplain"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333" />

        </LinearLayout>

        <!-- Foto Barang Rusak -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background_blue"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Foto Barang Rusak"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <ImageView
                android:id="@+id/ivFotoBarang"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="#F5F5F5"
                android:src="@drawable/default_rusak"
                android:contentDescription="Foto barang yang rusak" />

        </LinearLayout>

        <!-- Info Komplain -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background_blue"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvJudul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Judul Komplain"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvPelapor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pelapor: "
                    android:textSize="14sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:background="@drawable/status_background" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvWaktu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Waktu"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi Masalah"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDeskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi komplain..."
                android:textSize="14sp"
                android:textColor="#666666"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

        <!-- Info Tambahan Berdasarkan Status -->
        <!-- Info Pending -->
        <TextView
            android:id="@+id/tvAlasanInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alasan Pending: "
            android:textSize="14sp"
            android:textColor="#FF9800"
            android:background="@drawable/card_background_blue"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- Info Selesai -->
        <TextView
            android:id="@+id/tvCatatanInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Catatan Perbaikan: "
            android:textSize="14sp"
            android:textColor="#4CAF50"
            android:background="@drawable/card_background_blue"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- Action Buttons (Hanya untuk Teknisi) -->
        <LinearLayout
            android:id="@+id/layoutActionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background_blue"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Status Komplain"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸš€ Tandai Dalam Proses"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnPending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â³ Tandai Pending"
                android:backgroundTint="#ff9c00"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnComplete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âœ… Tandai Selesai"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <!-- Form Pending -->
        <LinearLayout
            android:id="@+id/layoutPendingReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background_blue"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alasan Pending"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etAlasanPending"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Contoh: Menunggu sparepart, Menunggu konfirmasi customer, dll."
                android:gravity="top"
                android:background="@drawable/edittext_border"
                android:padding="12dp" />

            <Button
                android:id="@+id/btnSavePending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simpan Status Pending"
                android:background="#FF9800"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Form Selesai -->
        <LinearLayout
            android:id="@+id/layoutCompletedInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background_blue"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Catatan Perbaikan"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etTeknisiNote"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Tuliskan detail perbaikan yang telah dilakukan..."
                android:gravity="top"
                android:background="@drawable/edittext_border"
                android:padding="12dp" />

            <Button
                android:id="@+id/btnSaveCompleted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simpan Status Selesai"
                android:background="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>