<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_timeline"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeColor="?attr/cardOutlineColor"
    app:strokeWidth="2sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Status Badge -->
        <TextView
            android:id="@+id/tv_timeline_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="completed"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/badge_proses"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:layout_marginBottom="8dp" />

        <!-- Title/Reason -->
        <TextView
            android:id="@+id/tv_timeline_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AC sudah diperbaiki"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/themeTextPrimary"
            android:layout_marginBottom="4dp" />

        <!-- Date -->
        <TextView
            android:id="@+id/tv_timeline_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="25/12/2025 12:54"
            android:textSize="14sp"
            android:textColor="?attr/themeTextSecondary"
            android:layout_marginBottom="4dp" />

        <!-- Technician -->
        <TextView
            android:id="@+id/tv_timeline_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="teknisi fizo"
            android:textSize="14sp"
            android:textColor="?attr/themeTextSecondary"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>