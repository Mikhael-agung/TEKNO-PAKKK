<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardBackgroundColor="?attr/themeCardBackground"
    android:paddingVertical="12dp">

    <!-- Status Badge -->
    <TextView
        android:id="@+id/tv_timeline_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="completed"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="@drawable/badge_proses"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:layout_marginBottom="8dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/tv_timeline_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AC sudah diperbaiki"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="4dp" />

    <!-- Date -->
    <TextView
        android:id="@+id/tv_timeline_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="25/12/2025 12:54"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="4dp" />

    <!-- Note -->
    <TextView
        android:id="@+id/tv_timeline_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="teknisi fizo"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="12dp" />

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginVertical="4dp" />

</LinearLayout>