<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:layout_marginTop="30dp"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header: Back Button + Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

                <!-- Back button-->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_arrow_back"
                app:backgroundTint="#FFFFFF"
                app:borderWidth="1dp"
                app:elevation="2dp"
                app:fabSize="mini"
                app:maxImageSize="24dp"
                app:tint="#007BFF" />

            <!-- App Title - Center di sisa space -->

            <!-- Spacer untuk balance (optional) -->
            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Complaint"
                android:textColor="#007BFF"
                android:textSize="28sp"
                android:textStyle="bold" />

            <View
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:visibility="invisible" />

        </LinearLayout>

        <!-- Judul Komplain -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul Komplain"
            android:textColor="#333"
            android:layout_marginTop="15dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_border"
            android:hint="Masukkan judul komplain"
            android:padding="12dp" />

        <!-- Deskripsi Masalah -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deskripsi Masalah"
            android:textColor="#333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_deskripsi"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_border"
            android:gravity="top"
            android:hint="Jelaskan masalah secara detail"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:padding="12dp" />

        <!-- Kategori -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kategori"
            android:textColor="#333"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/sp_kategori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_border"
            android:padding="12dp" />

        <!-- Foto Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_pilih_foto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Pilih Foto Barang Rusak"
            android:textColor="#007BFF"
            app:icon="@android:drawable/ic_menu_camera"
            app:iconTint="#007BFF"
            app:strokeColor="#007BFF"
            app:strokeWidth="1dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <!-- Foto Preview -->
        <ImageView
            android:id="@+id/iv_foto"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <!-- Submit Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp">

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kirim Komplain"
                android:textColor="@color/white"
                app:backgroundTint="#007BFF"
                app:cornerRadius="12dp"
                app:elevation="8dp"
                app:icon="@android:drawable/ic_menu_send"
                app:iconTint="@color/white" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>