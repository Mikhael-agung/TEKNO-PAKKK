<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail Komplain"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Foto Barang -->
        <ImageView
            android:id="@+id/ivFotoBarang"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_rusak"
            android:layout_marginBottom="16dp"/>

        <!-- Info Komplain -->
        <TextView
            android:id="@+id/tvJudulDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul Komplain"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvPelaporDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Oleh: Pelapor"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvAlamatDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alamat: Ruang Meeting Lt.2"
            android:textSize="14sp"
            android:textColor="#444444"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvStatusDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="14sp"
            android:textStyle="bold"
            android:padding="6dp"
            android:background="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvWaktuDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waktu"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tvDeskripsiDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deskripsi komplain lengkap..."
            android:textSize="14sp"
            android:textColor="#444444"
            android:layout_marginBottom="16dp"/>

        <!-- Action Buttons -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnPending"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" Pending"
                android:backgroundTint="#FF9800"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/btnCompleted"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" Completed"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Form Pending -->
        <LinearLayout
            android:id="@+id/layoutPendingReason"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tuliskan Alasan Pending"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etAlasanPendingDetail"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Contoh: Menunggu sparepart, menunggu konfirmasi customer..."
                android:gravity="top"
                android:background="@android:drawable/edit_text"
                android:padding="12dp"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnSavePending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simpan Pending"
                android:backgroundTint="#FF9800"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <!-- Form Completed -->
        <LinearLayout
            android:id="@+id/layoutCompletedInfo"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tuliskan Catatan Perbaikan"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etTeknisiNote"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Tuliskan detail pekerjaan yang dilakukan..."
                android:gravity="top"
                android:background="@android:drawable/edit_text"
                android:padding="12dp"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnSaveCompleted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simpan Completed"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <!-- Riwayat Status -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Riwayat Status"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"/>

        <!-- Tombol Back -->
        <Button
            android:id="@+id/btnBackDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kembali"
            android:backgroundTint="#2196F3"
            android:textColor="#333333"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
